// ----------------- User controls -----------------
slider1:6<0,11,1{16,32,64,128,256,512,1024,2048,4096,8192,16384,32768}>-FFT size
slider2:-120<-450,-12,6>-floor
slider3:0<0,1,1{disabled,enabled}>-show phase
slider4:2<0,3,1{rectangular,hamming,blackman-harris,blackman}>-window
slider5:0<0,2500,1>-integration time (ms)
slider6:0<0,12,0.1>-slope (dB/octave)
slider7:1000<10,10000,1>-octave gain center (Hz)
slider8:0<0,1,1{original,mid/side}>-show mid/side
slider9:0<0,1,1{disabled,enabled}>-itu weighting
slider10:0<0,1,1{disabled,enabled}>-rms mode
slider11:300<50,1000,10>-rms window (ms)

in_pin:left input
in_pin:right input
options:no_meter

@init
gfx_ext_retina == 0 ? gfx_ext_retina = 1;
gfx_ext_flags |= 0x100 | 0x200;
ext_nodenorm=1;
recpos=0;
max_fft_size=32768;
fftsize=max_fft_size;
gfx_clear=-1;
windowtype=-1;
fftidx=-1;
old_itu = 0;

// New: limit RMS history frames to a safe number to avoid JSFX memory overflow
max_rms_frames = 50; // Increased from 20 for better averaging

// Initialize RMS control variables
rms_frames_to_avg = 1;
rms_write_pos = 0;
rms_frames_stored = 0;

// --- Memory layout (safe, minimal) ---
// keep original history size calculation (works and keeps recpos simple)
histsize = max_fft_size + (max_fft_size*0.5 - 1);
window = histsize;

// Original-style fft workspace placement (first large working area)
fftworkspace = window + (max_fft_size*0.5 + 1);
integrate_buf = fftworkspace + max_fft_size*2;

// secondary workspace and buffers for derived stream ((L+R)-(L-R)) overlay
fftworkspace2 = integrate_buf + max_fft_size*2;
integrate_buf2 = fftworkspace2 + max_fft_size*2;

// separate circular history for derived stream placed after integrate_buf2
recpos2_offset = integrate_buf2 + max_fft_size*2;
recpos2 = recpos2_offset;

// temporary buffer for magnitude calculations
mag_buf_temp = recpos2_offset + histsize;      
rms_buf_main = mag_buf_temp + (max_fft_size * 0.5);   // only num_bins!
rms_buf_derived = rms_buf_main + ( (max_fft_size * 0.5) * max_rms_frames );

// ITU-R 468 weighting filter state variables â€“ placed after RMS buffer end
itu_filter_mem = rms_buf_derived + (max_fft_size/2 * max_rms_frames);

// States for L channel (6 total: 2 per section)
itu_z_l0_u1 = itu_filter_mem;     // section 0, u[n-1]
itu_z_l0_u2 = itu_z_l0_u1 + 1;    // section 0, u[n-2]
itu_z_l1_u1 = itu_z_l0_u2 + 1;    // section 1, u[n-1]
itu_z_l1_u2 = itu_z_l1_u1 + 1;    // section 1, u[n-2]
itu_z_l2_u1 = itu_z_l1_u2 + 1;    // section 2, u[n-1]
itu_z_l2_u2 = itu_z_l2_u1 + 1;    // section 2, u[n-2]
// States for R channel (6 total: 2 per section)
itu_z_r0_u1 = itu_z_l2_u2 + 1;
itu_z_r0_u2 = itu_z_r0_u1 + 1;
itu_z_r1_u1 = itu_z_r0_u2 + 1;
itu_z_r1_u2 = itu_z_r1_u1 + 1;
itu_z_r2_u1 = itu_z_r1_u2 + 1;
itu_z_r2_u2 = itu_z_r2_u1 + 1;

// Hardcoded SOS coeffs (b0,b1,b2 | a0=1,a1,a2) for fs=48000
// Section 0 (low-freq emphasis)
sos0_b0 = 0.03895648;
sos0_b1 = 0.07796198;
sos0_b2 = 0.03900552;
sos0_a1 = -0.78503289;
sos0_a2 = 0.12076391;
// Section 1 (mid shaping)
sos1_b0 = 1.00000000;
sos1_b1 = 1.99952035;
sos1_b2 = 0.99952096;
sos1_a1 = -0.93847268;
sos1_a2 = 0.41986127;
// Section 2 (high-freq rolloff)
sos2_b0 = 1.00000000;
sos2_b1 = -0.00077845;
sos2_b2 = -0.99922155;
sos2_a1 = -0.58162359;
sos2_a2 = 0.57828378;

// Init ITU states to 0
loop(12,
  itu_filter_mem[i] = 0;
  i += 1;
);

// compute_rms_magnitude: stores and averages amplitude values (not power)
// compute_rms_magnitude: stores and averages POWER and returns TRUE RMS value
function compute_rms_magnitude(bin_idx, current_mag, is_derived)
  local(sum, frame, read_idx, rms_buf_base, num_bins, actual_frames)
(
  rms_buf_base = is_derived ? rms_buf_derived : rms_buf_main;
  num_bins = fftsize * 0.5;

  // Store instantaneous POWER (magnitude squared) into circular buffer
  bin_offset = rms_write_pos * num_bins + bin_idx;
  rms_buf_base[bin_offset] = sqr(current_mag);

  // Sum power over required frames
  sum = 0;
  frame = 0;
  actual_frames = min(rms_frames_to_avg, rms_frames_stored + 1);

  loop(actual_frames,
    read_idx = rms_write_pos - frame;
    read_idx < 0 ? read_idx += max_rms_frames;
    bin_offset = read_idx * num_bins + bin_idx;
    sum += rms_buf_base[bin_offset];
    frame += 1;
  );

  // Compute mean power and return sqrt -> true RMS magnitude
  sqrt( sum / max(actual_frames, 1) );
);


@slider
old_w=0;
slider9 != old_itu ? (
  old_itu = slider9;
  loop(12,
    itu_filter_mem[i] = 0;
    i += 1;
  );
);
slider10 != old_rms ? (
  old_rms = slider10;
  rms_frames_stored = 0;
  rms_write_pos = 0;
);

@block

// RMS calculation moved to @gfx where fftsize is current
slider2 != lfloor ? (
  lfloor = slider2;
  minvol=2*exp(log(10)/20*slider2);
);

@sample
slider9 > 0.5 ? (
  // Left channel cascade
  // Section 0
  u0_l = spl0 - sos0_a1 * itu_z_l0_u1[0] - sos0_a2 * itu_z_l0_u2[0];
  y0_l = sos0_b0 * u0_l + sos0_b1 * itu_z_l0_u1[0] + sos0_b2 * itu_z_l0_u2[0];
  itu_z_l0_u2[0] = itu_z_l0_u1[0];
  itu_z_l0_u1[0] = u0_l;
  
  // Section 1
  u1_l = y0_l - sos1_a1 * itu_z_l1_u1[0] - sos1_a2 * itu_z_l1_u2[0];
  y1_l = sos1_b0 * u1_l + sos1_b1 * itu_z_l1_u1[0] + sos1_b2 * itu_z_l1_u2[0];
  itu_z_l1_u2[0] = itu_z_l1_u1[0];
  itu_z_l1_u1[0] = u1_l;
  
  // Section 2
  u2_l = y1_l - sos2_a1 * itu_z_l2_u1[0] - sos2_a2 * itu_z_l2_u2[0];
  y2_l = sos2_b0 * u2_l + sos2_b1 * itu_z_l2_u1[0] + sos2_b2 * itu_z_l2_u2[0];
  itu_z_l2_u2[0] = itu_z_l2_u1[0];
  itu_z_l2_u1[0] = u2_l;
  
  filtered_l = y2_l;
  
  // Right channel cascade (mirror left)
  // Section 0
  u0_r = spl1 - sos0_a1 * itu_z_r0_u1[0] - sos0_a2 * itu_z_r0_u2[0];
  y0_r = sos0_b0 * u0_r + sos0_b1 * itu_z_r0_u1[0] + sos0_b2 * itu_z_r0_u2[0];
  itu_z_r0_u2[0] = itu_z_r0_u1[0];
  itu_z_r0_u1[0] = u0_r;
  
  // Section 1
  u1_r = y0_r - sos1_a1 * itu_z_r1_u1[0] - sos1_a2 * itu_z_r1_u2[0];
  y1_r = sos1_b0 * u1_r + sos1_b1 * itu_z_r1_u1[0] + sos1_b2 * itu_z_r1_u2[0];
  itu_z_r1_u2[0] = itu_z_r1_u1[0];
  itu_z_r1_u1[0] = u1_r;
  
  // Section 2
  u2_r = y1_r - sos2_a1 * itu_z_r2_u1[0] - sos2_a2 * itu_z_r2_u2[0];
  y2_r = sos2_b0 * u2_r + sos2_b1 * itu_z_r2_u1[0] + sos2_b2 * itu_z_r2_u2[0];
  itu_z_r2_u2[0] = itu_z_r2_u1[0];
  itu_z_r2_u1[0] = u2_r;
  
  filtered_r = y2_r;
) : (
  filtered_l = spl0;
  filtered_r = spl1;
);

abs(recpos[]=filtered_l+filtered_r) > minvol ? update=1;
// derived stream: Side = (L - R)
derived = filtered_l - filtered_r;
abs(recpos2[]=derived) > minvol ? update=1;
// advance primary recpos (original buffer starts at 0)
recpos = ((recpos+1) >= histsize ? 0 : (recpos+1));
// advance derived recpos (buffer starts at recpos2_offset)
recpos2 = ((recpos2+1) >= (recpos2_offset + histsize) ? recpos2_offset : (recpos2+1));

@gfx 640 400
small_mode = gfx_w<200*gfx_ext_retina || gfx_h < 50*gfx_ext_retina;
gfx_ext_retina>1 ? gfx_setfont(1,"Arial",16*gfx_ext_retina,'b') : gfx_setfont(0);

function draw_button(xp, yp, str) 
  instance(w,h,x,y) 
  globals(gfx_r,gfx_g,gfx_b,gfx_x,gfx_y) 
(
  gfx_measurestr(str, w, h);
  xp -= w+3;
  x=xp;
  y=yp;
  gfx_set(0,0,.75);
  w+=3;
  h+=3;
  gfx_rect(x,y,w,h);
  gfx_set(0,.5,1);
  gfx_line(x,y,x+w,y);
  gfx_line(x+w,y,x+w,y+h);
  gfx_line(x,y+h,x+w,y+h);
  gfx_line(x,y,x,y+h);
  h+=1;
  w+=1;
  gfx_x=xp+2; gfx_y=yp+2;
  gfx_drawstr(str);
  gfx_x = xp;
);
function hit_button(xp,yp,cm) 
  instance(w,h,x,y) 
  globals(cap_mode, cap_last_x, cap_last_y) 
( 
  xp>=x&&yp>=y&&xp<x+w&&yp<y+h ? (
    cap_last_x = xp;
    cap_last_y = yp;
    cap_mode=cm;
  );
);

function drag_slider(x, y, z, dx)
  globals(mouse_y, cap_last_y, cap_drag)
(
  x = min(max(x + dx * (cap_last_y-mouse_y),y),z);
  cap_last_y=mouse_y;
  cap_drag=1;
  x;
);

function drag_slider_precise(x, y, z, dx)
  globals(mouse_cap)
(
  (mouse_cap & 4) ? dx *= 0.1;
  drag_slider(x, y, z, dx);
);

function cycle_slider(x, y, z, dx)
  globals(last_mouse_cap)
(
  (last_mouse_cap & 16) ? x -= dx : x += dx;
  y > z ? ( dx=y; y=z; z=dx; );
  x > z ? y : x < y ? z : x;
);


(mouse_cap & 1) ? (
   !(last_mouse_cap & 1) ? (
       (cap_mode == 1||cap_mode == 4) && !cap_drag && cap_timer < 12 ? (
         cap_mode == 1 ? (
            slider2 = -120;
            slider_automate(slider2);
          ) : (
            slider5 = 0;
            slider_automate(slider5);
          );
         cap_mode=0;
         old_w=0;
       ) : (
         cap_mode = cap_drag = cap_timer = 0;
         small_mode ? (
          cap_last_x = mouse_x;
          cap_last_y = mouse_y;
          cap_mode=1; // floor
         ) : phase_button.hit_button(mouse_x,mouse_y,-1) ? (
           slider3=!slider3;
           slider_automate(slider3);
           old_w = 0;
         ) : (
           floor_button.hit_button(mouse_x,mouse_y,1)||
           window_button.hit_button(mouse_x,mouse_y,2)||
           fft_button.hit_button(mouse_x,mouse_y,3)||
           integrate_button.hit_button(mouse_x,mouse_y,4)||
           slope_button.hit_button(mouse_x,mouse_y,5);
         );
       );
    );
    cap_mode == 1 && cap_last_y != mouse_y ? (
      slider2 = drag_slider_precise(slider2, -450, -12, 0.2);
      old_w=0;
      slider_automate(slider2);
    );
    cap_mode == 2 && cap_last_y != mouse_y ? (
      slider4 = drag_slider(slider4, 0.0, 3.0, .03);
      old_w=0;
      slider_automate(slider4);
    );
    cap_mode == 3 && cap_last_y != mouse_y ? (
      slider1 = drag_slider(slider1, 0.0, 11.0, .03);
      old_w=0;
      slider_automate(slider1);
    );
    cap_mode == 4 && cap_last_y != mouse_y ? (
      slider5 = drag_slider_precise(slider5, 0.0, 2500.0, 5);
      old_w=0;
      slider_automate(slider5);
    );
    cap_mode == 5 && cap_last_y != mouse_y ? (
      slider6 = drag_slider_precise(slider6, 0.0, 12.0, .1);
      old_w=0;
      slider_automate(slider6);
    );
) :
(last_mouse_cap & 1) && !cap_drag ? (
  cap_mode == 2 ? (
    slider4 = cycle_slider(slider4, 0.0, 3.0, 1.0);
    old_w=0;
    slider_automate(slider4);
  );
  cap_mode == 3 ? (
    slider1 = cycle_slider(slider1, 0.0, 11.0, 1.0);
    old_w=0;
    slider_automate(slider1);
  );
);

cap_mode && cap_timer < 12 ? cap_timer += 1;

(mouse_cap==0 && last_mouse_cap==2) ? (
  gfx_x=mouse_x;
  gfx_y=mouse_y;
  i=0;
  sprintf(#menustr,">FFT size",#menustr);
  loop(12,
    sprintf(#menustr,"%s|%s%d",#menustr,(slider1|0)==i ?"!":"", 16<<i);
    i+=1;
  );
  sprintf(#menustr,"%s|<",#menustr);
  
  sprintf(#menustr,"%s|>Window|%sRectangular|%sHamming|%sBlackman-Harris|%sBlackman|<",
    #menustr,slider4==0?"!":"",slider4==1?"!":"", slider4==2?"!":"", slider4==3?"!":"");
    
  sprintf(#menustr,"%s|%sShow phase",#menustr,slider3>.5?"!":"");
  
  sprintf(#menustr,"%s|%sShow mid/side",#menustr,slider8>.5?"!":"");
  
  sprintf(#menustr,"%s|%sITU weighting",#menustr,slider9>.5?"!":"");
  
  sprintf(#menustr,"%s|%sRMS mode",#menustr,slider10>.5?"!":"");
    
 ret = gfx_showmenu(#menustr);
  ret > 0 ? (
    (ret-=1) < 12 ? (slider1 = ret; slider_automate(slider1); ):
    (ret-=12) < 4 ? (slider4 = ret; slider_automate(slider4); ):
    (ret-=4) == 0 ? (slider3 = !slider3; old_w=0; slider_automate(slider3); ) :
    (ret-=1) == 0 ? (slider8 = !slider8; old_w=0; slider_automate(slider8); ) :
    (ret-=1) == 0 ? (slider9 = !slider9; old_w=0; slider_automate(slider9); ) :
    (ret-=1) == 0 ? (slider10 = !slider10; old_w=0; slider_automate(slider10); );
    
  );
  update=1;
);

last_mouse_cap = mouse_cap;

// only update if new fft data is there or if the size changed
update || old_w != gfx_w || old_h!=gfx_h? (

old_w=gfx_w; old_h=gfx_h;

gfx_r=gfx_g=gfx_b=0; gfx_a=1;
gfx_x=gfx_y=0;
gfx_rectto(gfx_w,gfx_h);

sc=(gfx_h-20)*20/(-slider2 * log(10));

// draw horz grid
gfx_r=gfx_g=gfx_b=0.6;
gfx_a=0.5;
gv=1;
cnt=100;
gfx_y=-100;
small_mode||while(
  y=20-log(gv)*sc;
  y> gfx_y ? (
    gfx_line(0,y,gfx_w,y,0);
    bottom_line = gfx_y;
    gfx_x=0; 
    gfx_y=y+2;
    gfx_drawnumber(log10(gv)*20,0);
    gfx_drawchar($'d');
    gfx_drawchar($'B');
    gfx_y+=gfx_texth;
  );
  gv*=0.5;

  gfx_y<gfx_h && cnt-=1 > 0;
);


wsc=gfx_w/log(1+400);

// draw vert grid
f=20;
gfx_x+=4;
lx=gfx_x;
small_mode||while(
  tx = log(1.0+(f/srate*2.0)*400)*wsc;
  dotext = tx > gfx_x && f!=40 && f!=4000 && f != 15000 &&
     (f<400 || f >= 1000 || f == 500) && (f<6000 || f>=10000);
  tx > lx ? ( lx=tx+4; gfx_line(tx,0,tx,gfx_h - (dotext ? 0 : gfx_texth+2),0); );
  dotext ? (
    gfx_x=tx +3;
    gfx_y = gfx_h-gfx_texth;
    f>=1000 ? gfx_printf("%dkHz",f*.001) : gfx_printf("%dHz",f);
  );
  f += (f<100?10:f<1000?100:f<10000?1000:5000);
  f < srate*0.5;
);

small_mode ? ( 
  gfx_set(1,1,1,0.25);
  gfx_x=0;
  gfx_y=2;
  !(gfx_ext_flags&1) ? gfx_printf("FFT %d\n%ddB f",16<<slider1,slider2);
) : (
fft_button.draw_button(gfx_w, 0, sprintf(#,"%s%d",gfx_w<400?"":"FFT: ",16<<slider1));

  window_button.draw_button(gfx_x-8, 0, 
    (slider4|0)==1 ? "hamming" :  
    (slider4|0)==2 ? "blackman-harris" :
    (slider4|0)==3 ? "blackman" :
    "rectangular"); 
  sprintf(#floorstr,"%s%.1fdB",gfx_w<420?"":"floor: ",slider2);
  sprintf(#intstr,"%s: %dms",gfx_w<420 ? "int" : "integrate", slider5|0);
  sprintf(#slopestr,"%s%.1fdB/oct",gfx_w<420?"":"slope: ",floor(slider6*10+0.5)/10);
  sprintf(#rmsstr,"%sRMS: %dms",gfx_w<420?"":"",slider11|0); // RMS button label
  rowpos = gfx_w<700?gfx_texth+8:0;
  rowpos > 0 ? (
    phase_button.draw_button(gfx_x-8,0, slider3?"phase on" : "phase off");
    gfx_x=gfx_w;
  ) : gfx_x-=8;
  
  floor_button.draw_button(gfx_x,rowpos,#floorstr);
  slope_button.draw_button(gfx_x-8,rowpos, #slopestr);
  integrate_button.draw_button(gfx_x-8,rowpos, #intstr);
  rms_button.draw_button(gfx_x-8,rowpos, slider10>.5 ? #rmsstr : "RMS off"); // Add RMS button
  rowpos <= 0 ? phase_button.draw_button(gfx_x-8,rowpos, slider3?"phase on" : "phase off");
);

update ? (
  update=0;

  integrate_sc = 1;
  slider5 > 0 ? (
    integrate_now = time_precise();
    integrate_en ? (
      integrate_sc -= exp(-5 * 1000.0 * (integrate_now - integrate_lastt) / slider5);
    ) : (
      integrate_en = 1;
    );
    integrate_lastt = integrate_now;
  ) : (
    integrate_en = 0;
  );

  windowsize != fftsize || windowtype != (slider4|0) ? (
    windowtype=slider4|0; 
    windowsize=fftsize;
    dwindowpos = $pi*2/fftsize;
    i=pwr=0;
    loop(fftsize*.5+1,
       windowpos=i*dwindowpos;
       pwr += (window[i] = (
         windowtype==1 ? 0.53836 - cos(windowpos)*0.46164 :
         windowtype==2 ? 0.35875 - 0.48829 * cos(windowpos) + 0.14128 * cos(2*windowpos) - 0.01168 * cos(3*windowpos) :
         windowtype==3 ? 0.42 - 0.50 * cos(windowpos) + 0.08 * cos(2.0*windowpos) :
          1.0));
       i+=1;
    );
    pwr=.5/(pwr*2-window[i-1]);
    loop(fftsize*.5+1,window[i-=1]*=pwr);
    integrate_sc=1;
  );

  fftidx != (slider1|0) ? (
    fftidx=slider1|0;
    fftsize=2^(min(max(fftidx,0),11)+4);
    integrate_sc=1;
  );

  // FIX: Calculate RMS frames after fftsize is known
  slider10 > 0.5 ? (
    frame_duration_ms = (fftsize / srate) * 1000.0;
    rms_frames_to_avg = max(floor(slider11 / frame_duration_ms) + 1, 5);
    max_reasonable_frames = floor(1000 / frame_duration_ms);
    rms_frames_to_avg = min(rms_frames_to_avg, max_rms_frames);
    rms_frames_to_avg = min(rms_frames_to_avg, max_reasonable_frames);
  );

  buf1=recpos-fftsize;
  buf1<0 ? buf1+=histsize;
  buf2=window;
  buf3=fftworkspace;
  loop(fftsize*.5 + 1,
    buf3[] = buf1[]*buf2[];
    buf3+=1;

    buf2+=1;
    (buf1+=1) >= histsize ? buf1 -= histsize;
  );
  buf2-=1;
  loop(fftsize*.5 - 1,
    buf3[] = buf1[]*(buf2-=1)[];
    buf3+=1;
    (buf1+=1) >= histsize ? buf1 -= histsize;
  );

  fft_real(fftworkspace,fftsize);
  fft_permute(fftworkspace,fftsize/2);
  fftworkspace[1]=0;

  ascale=gfx_h/$pi*0.25;
  xscale=800/(fftsize-4);

  // Phase drawing (unchanged)
  buf3=fftworkspace;
  buf2=integrate_buf+max_fft_size*0.5;
  i=0;
  lx=0;
  slider3 ? loop(fftsize*0.5,
    ang=-atan2(buf3[1],buf3[]);
    buf3+=2;
    integrate_en ? (
      ang = buf2[] += integrate_sc * (ang - buf2[]);
      buf2+=1;
    );
